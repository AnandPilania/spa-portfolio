---
import '../styles/global.css';

// astro imports
import Picture from 'astro/components/Picture.astro';

// components
import Button from '../components/Button.astro';

// images
import Logo from '../assets/logo.svg';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Astro description'
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body
		class='antialiased max-w-[1440px] mx-auto mt-4 bg-pale-cream text-jet-black'>
		<div class='overflow-x-hidden'>
			<header>
				<div class='flex justify-between my-8 mx-4 md:mx-11'>
					<Picture
						src={Logo}
						alt="Amy's logo"
						loading='lazy'
						class='h-12 md:h-16 w-auto'
					/>
					<Button
						type='primary'
						,
						label='Free Consultation'
					/>
				</div>
			</header>
			<slot />
			<footer>
				<div class='flex justify-between my-8 mx-4 md:mx-11'>
					<Picture
						src={Logo}
						alt="Amy's logo"
