---
import { cx } from '../utils/classnames';
export type ButtonProps = {
	type: 'primary' | 'secondary';
	label: string;
	size: 'small' | 'medium' | 'large';
};

const ButtonTypes: Record<ButtonProps['type'], string> = {
	primary: 'bg-jet-black text-pale-cream hover:bg-deep-purple',
	secondary: 'bg-coral-pink text-pale-cream hover:bg-burnt-orange',
};

const ButtonSizes: Record<ButtonProps['size'], string> = {
	small: 'w-[11rem] h-11 text-button-0-875 rounded-full',
	medium: 'w-56 h-12 text-button-1 rounded-full',
	large: 'w-64 h-16 text-button-1 rounded-full',
};

const {
	type = 'primary',
	label,
	size = 'small',
}: ButtonProps = Astro.props as ButtonProps;
---

<button
	class=`${cx(
    ButtonTypes[type],
	ButtonSizes[size],
        'w-56 h-12 md:h-16 md:w-56 text-button-0-875 rounded-full',
    )}`
	>{label}</button
>
