---
import { cx } from '../utils/classnames';
export type ButtonProps = {
	type: 'primary' | 'secondary';
	label: string;
};

const ButtonTypes: Record<ButtonProps['type'], string> = {
	primary: 'bg-jet-black text-pale-cream hover:bg-deep-purple',
	secondary: 'bg-coral-pink text-pale-cream hover:bg-burnt-orange',
};

const { type = 'primary', label }: ButtonProps = Astro.props as ButtonProps;
---

<button
	class=`${cx(
    ButtonTypes[type],
        'w-[11rem] h-11 text-button-0-875 rounded-full md:w-56 md:h-16 md:text-button-1 lg:h-14',
    )}`
	>{label}</button
>
